{
  "devDependencies": {
    "@prettier/plugin-xml": ">=3.4",
    "prettier-plugin-ini": ">=1.3",
    "prettier-plugin-properties": ">=0.3",
    "prettier-plugin-sh": ">=0.14",
    "prettier-plugin-sql": ">=0.18",
    "prettier-plugin-toml": ">=2.0"
    "prettier-plugin-jinja-template": ">=2.0",
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-toml",
      "prettier-plugin-ini",
      "prettier-plugin-properties",
      "prettier-plugin-sh",
      "prettier-plugin-sql",
      "prettier-plugin-jinja-template",
      "@prettier/plugin-xml"
    ],
    "formatter": "sql-formatter",
    "keywordCase": "lower",
    "logicalOperatorNewline": "after",
    "language": "postgresql"
  }
}
